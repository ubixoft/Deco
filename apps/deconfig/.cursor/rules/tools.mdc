```typescript
// Basic error handling pattern
execute: async ({ context }) => {
  const result = await someAsyncOperation(context);
  if (!result.ok) {
    throw new Error("Descriptive error message")
  }
  return result;
}

// With database operations
execute: async ({ context }) => {
  const db = await getDb(env);
  

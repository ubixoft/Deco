{
  "name": "@deco/chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "PWD=$PWD/apps/web deno run dev",
    "dev": "PWD=$PWD/apps/web deno run dev & PWD=$PWD/apps/api deno run dev",
    "build": "PWD=$PWD/apps/web deno run build",
    "lint": "deno lint --config ./package.json .",
    "fmt": "deno fmt --config ./package.json .",
    "check": "deno check --allow-import --config ./package.json .",
    "ui": "npx shadcn@latest add -c ./packages/ui"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "workspace": [
    "./apps/web",
    "./apps/api",
    "./packages/ui",
    "./packages/sdk"
  ],
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "esnext",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": [
    ".github/"
  ],
  "unstable": [
    "kv"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "hono": "^4.7.7"
  }
}
